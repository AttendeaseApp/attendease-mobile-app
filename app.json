{
    "expo": {
        "name": "attendease-mobile-app",
        "slug": "attendease-mobile-app",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "attendeasemobileapp",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSCameraUsageDescription": "Allow camera access for facial registration."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "permissions": ["android.permission.CAMERA"],
            "softwareKeyboardLayoutMode": "pan"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ],
            [
                "expo-camera",
                [
                    "expo-build-properties",
                    {
                        "ios": {
                            "useFrameworks": "static"
                        }
                    }
                ]
            ],
            "expo-asset"
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "d22b818c-55ee-4c8a-a441-b3621fe5d074"
            }
        },
        "owner": "attendease"
    }
}
